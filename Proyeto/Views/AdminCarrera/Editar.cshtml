@model Proyeto.Models.CarreraAdminModel;
@{
    ViewData["Title"] = "Nueva Carrera";
}
<div class="card col-8">
    <div class="card-header">Editar Carrera</div>
</div>
<div class="card-body justify-content-center">
    <form asp-action="Editar" asp-controller="AdminCarrera" method="post">
        <input asp-for="IdCaAdmin" type="hidden" class="form-control" />
        <div class="col-md-4 mb-3">
            <label for="staticEmail2">Nombre</label>
            <input  asp-for="Nombre" type="text" class="form-control"/>
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <button type="submit" class="btn btn-primary mb-3 btn-sm">Guardar</button> <br />
            <a asp-action="Index" asp-controller="AdminCarrera" class="btn btn-warning btn-sm">Volver a la lista</a>
        </div>
    </form>
</div>